<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="4"
        android:background="@color/board_color">

        <TextView
            android:id="@+id/text_date"
            android:layout_column="0"
            android:layout_row="0"
            android:gravity="center"
            android:textSize="@dimen/list_smalltext"
            android:textColor="@color/text_on_green"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:maxLength="8" />
        <TextView
            android:id="@+id/text_time"
            android:layout_column="0"
            android:layout_row="1"
            android:gravity="center"
            android:textSize="@dimen/list_smallsmalltext"
            android:textColor="@color/text_on_green"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:maxLength="8" />
        <TextView
            android:id="@+id/text_moveseq"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:textSize="@dimen/list_smalltext"
            android:textColor="@color/text_on_green"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:paddingHorizontal="3dp"/>
        <TextView
            android:id="@+id/text_black_player"
            android:layout_column="2"
            android:layout_row="0"
            android:gravity="center"
            android:textSize="@dimen/list_text"
            android:textColor="@color/black"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:padding="2dp"/>
        <TextView
            android:id="@+id/text_white_player"
            android:layout_column="3"
            android:layout_row="0"
            android:gravity="center"
            android:textSize="@dimen/list_text"
            android:textColor="@color/white"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:padding="2dp" />
        <TextView
            android:id="@+id/text_black_discs"
            android:layout_column="2"
            android:layout_row="1"
            android:gravity="center"
            android:textSize="@dimen/list_text"
            android:textColor="@color/black"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/text_white_discs"
            android:layout_column="3"
            android:layout_row="1"
            android:gravity="center"
            android:textSize="@dimen/list_text"
            android:textColor="@color/white"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/text_note"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_columnSpan="4"
            android:textSize="@dimen/list_text"
            android:textColor="@color/text_on_green"
            android:layout_width="360dp"
            android:textStyle="italic"
            android:layout_height="wrap_content"/>
    </GridLayout>
</LinearLayout>