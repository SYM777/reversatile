<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DBgameSavedActivity"
    tools:showIn="@layout/activity_db_game">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/DBdateGameFrame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/board_color"
                    android:padding="1dp">
                    <Button
                        android:id="@+id/dateGameSortButton"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:minHeight="0dip"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/board_color"
                        android:textColor="@color/text_on_green"
                        android:fontFamily="sans-serif"
                        android:text="@string/title_db_date"
                        android:textAllCaps="false"
                        android:textSize="@dimen/title_text"
                        android:paddingVertical="5dp"/>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/DBseqGameFrame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/board_color"
                    android:padding="1dp">
                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:minHeight="0dip"
                        android:background="@color/board_color"
                        android:textColor="@color/text_on_green"
                        android:fontFamily="sans-serif"
                        android:gravity="center_horizontal"
                        android:text="@string/title_db_moveseq"
                        android:textSize="@dimen/title_text"
                        android:paddingVertical="5dp" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/DBblackGameFrame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/board_color"
                    android:padding="1dp">
                    <Button
                        android:id="@+id/blackGameSortButton"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:minHeight="0dip"
                        android:background="@color/board_color"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif"
                        android:text="@string/title_db_black"
                        android:textAllCaps="false"
                        android:textSize="@dimen/title_text"
                        android:paddingVertical="5dp"/>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/DBwhiteGameFrame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/board_color"
                    android:padding="1dp">
                    <Button
                        android:id="@+id/whiteGameSortButton"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:minHeight="0dip"
                        android:background="@color/board_color"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif"
                        android:text="@string/title_db_white"
                        android:textAllCaps="false"
                        android:textSize="@dimen/title_text"
                        android:paddingVertical="5dp"/>
                </FrameLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>
        <ListView
            android:id="@+id/listGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
